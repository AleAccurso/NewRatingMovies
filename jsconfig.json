{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": ".",
    "allowJs": false,
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "~~/*": ["./*"],
      "@@/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*", ".nuxt", "dist"],
  "json.schemas": [
    {
      "$schema": "https://json.schemastore.org/jsconfig"
    }
  ]
}
